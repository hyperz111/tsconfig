{
	"compilerOptions": {
		"module": "nodenext",
		"target": "esnext",
		"lib": ["esnext"],
		"declaration": true,
		"noUncheckedIndexedAccess": true,
		"strict": true,
		"verbatimModuleSyntax": true,
		"isolatedModules": true,
		"noUncheckedSideEffectImports": true,
		"moduleDetection": "force",
		"skipLibCheck": true
	}
}
